"""ROS2 vision node for {{ model_name }} ({{ variant }})."""

import time
import traceback
import rclpy
from rclpy.node import Node
from sensor_msgs.msg import Image
from cv_bridge import CvBridge
{% if output_type == "detections" %}
from vision_msgs.msg import Detection2DArray, Detection2D, ObjectHypothesisWithPose, Pose2D
{% elif output_type == "depth_map" %}
import numpy as np
{% endif %}
{% if has_text_input %}
from std_msgs.msg import String
{% endif %}

from .runner import {{ runner_class }}


class VisionNode(Node):
    def __init__(self):
        super().__init__('{{ node_name }}')
        self.get_logger().info('Initializing {{ node_name }}...')
        self.bridge = CvBridge()
        self._frame_count = 0

        # Declare parameters
        self.get_logger().info('Declaring parameters...')
{% for param in parameters %}
        self.declare_parameter('{{ param.name }}', {{ param.default | python_repr }})
{% endfor %}
        self.declare_parameter('input_topic', '{{ input_topic }}')
        self.declare_parameter('variant', '{{ variant }}')
        self.get_logger().info('Parameters declared.')

        # Initialize runner (runner creates the model internally)
        self.get_logger().info('Creating runner ({{ runner_class }})...')
        t0 = time.monotonic()
        self.runner = {{ runner_class }}(self)
        self.get_logger().info(f'Runner created in {time.monotonic() - t0:.2f}s')

        # Image subscriber
        input_topic = self.get_parameter('input_topic').value
        self.get_logger().info(f'Subscribing to image topic: {input_topic}')
        self.image_sub = self.create_subscription(
            Image, input_topic, self._image_callback, 10)

{% if has_text_input %}
        # Text prompt subscriber
        self._prompt = self.get_parameter('default_prompt').value
        self.prompt_sub = self.create_subscription(
            String, 'prompt', self._prompt_callback, 10)
{% endif %}

        # Publishers
{% for pub in publishers %}
{% if pub.msg_type == "sensor_msgs/Image" %}
        self.{{ pub.topic }}_pub = self.create_publisher(Image, '{{ pub.topic }}', 10)
        self.get_logger().info('Publisher created: {{ pub.topic }} (Image)')
{% elif pub.msg_type == "DetectionArray" %}
        self.{{ pub.topic }}_pub = self.create_publisher(Detection2DArray, '{{ pub.topic }}', 10)
        self.get_logger().info('Publisher created: {{ pub.topic }} (Detection2DArray)')
{% elif pub.msg_type == "std_msgs/String" %}
        self.{{ pub.topic }}_pub = self.create_publisher(String, '{{ pub.topic }}', 10)
        self.get_logger().info('Publisher created: {{ pub.topic }} (String)')
{% else %}
        # TODO: Add publisher for {{ pub.msg_type }}
        # self.{{ pub.topic }}_pub = self.create_publisher(..., '{{ pub.topic }}', 10)
{% endif %}
{% endfor %}

        self.get_logger().info(
            '{{ node_name }} ready â€” {{ model_name }}:{{ variant }} on {{ backend }}')

{% if has_text_input %}
    def _prompt_callback(self, msg: String):
        self._prompt = msg.data
        self.get_logger().info(f'Prompt updated: {self._prompt}')

{% endif %}
    def _image_callback(self, msg: Image):
        self._frame_count += 1
        frame_id = self._frame_count
        try:
            if frame_id <= 3 or frame_id % 100 == 0:
                self.get_logger().info(
                    f'Frame {frame_id}: received image '
                    f'{msg.width}x{msg.height} enc={msg.encoding}')

            t0 = time.monotonic()
            cv_image = self.bridge.imgmsg_to_cv2(msg, 'bgr8')
            t_bridge = time.monotonic() - t0

            t0 = time.monotonic()
{% if has_text_input %}
            result = self.runner.infer(cv_image, text=self._prompt)
{% else %}
            result = self.runner.infer(cv_image)
{% endif %}
            t_infer = time.monotonic() - t0

            t0 = time.monotonic()
            self._publish(result, msg.header)
            t_publish = time.monotonic() - t0

            if frame_id <= 3 or frame_id % 100 == 0:
                self.get_logger().info(
                    f'Frame {frame_id}: bridge={t_bridge:.3f}s '
                    f'infer={t_infer:.3f}s publish={t_publish:.3f}s')
        except Exception as e:
            self.get_logger().error(
                f'Frame {frame_id}: exception in callback:\n'
                f'{traceback.format_exc()}')

{% if output_type == "detections" %}
    def _publish(self, result, header):
        det_array = Detection2DArray()
        det_array.header = header

        boxes = result.get('boxes', [])
        scores = result.get('scores', [])
        class_names = result.get('class_names', [''] * len(scores))

        for i in range(len(scores)):
            det = Detection2D()
            det.header = header

            # Bounding box center + size
            x1, y1, x2, y2 = boxes[i]
            det.bbox.center = Pose2D(x=(x1 + x2) / 2, y=(y1 + y2) / 2, theta=0.0)
            det.bbox.size_x = float(x2 - x1)
            det.bbox.size_y = float(y2 - y1)

            # Hypothesis
            hyp = ObjectHypothesisWithPose()
            hyp.hypothesis.class_id = str(class_names[i])
            hyp.hypothesis.score = float(scores[i])
            det.results.append(hyp)

            det_array.detections.append(det)

        self.detections_pub.publish(det_array)
        if self._frame_count <= 3 or self._frame_count % 100 == 0:
            self.get_logger().info(
                f'Published {len(det_array.detections)} detections on /detections')
{% elif output_type == "depth_map" %}
    def _publish(self, result, header):
        depth = result['depth']
        depth_msg = self.bridge.cv2_to_imgmsg(
            depth.astype(np.float32), encoding='32FC1')
        depth_msg.header = header
        self.depth_pub.publish(depth_msg)

        if 'depth_colored' in result:
            color_msg = self.bridge.cv2_to_imgmsg(result['depth_colored'], encoding='rgb8')
            color_msg.header = header
            self.depth_colored_pub.publish(color_msg)

        if self._frame_count <= 3 or self._frame_count % 100 == 0:
            self.get_logger().info('Published depth map')
{% else %}
    def _publish(self, result, header):
        # TODO: Implement publishing for output type '{{ output_type }}'
        self.get_logger().debug(f'Result keys: {list(result.keys())}')
{% endif %}


def main(args=None):
    rclpy.init(args=args)
    try:
        node = VisionNode()
    except Exception:
        import traceback as tb
        tb.print_exc()
        rclpy.shutdown()
        return
    try:
        rclpy.spin(node)
    except (KeyboardInterrupt, rclpy.executors.ExternalShutdownException):
        pass
    finally:
        node.destroy_node()
        try:
            rclpy.shutdown()
        except Exception:
            pass


if __name__ == '__main__':
    main()
